{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": [
        "app/components/*"
      ],
      "@Styles/*": [
        "app/styles/*"
      ],
      "@Hooks/*": [
        "app/hooks/*"
      ],
      "@Types/*": [
        "app/types/*"
      ],
      "@Api": [
        "app/constants/api"
      ],
      "@Path": [
        "app/constants/path"
      ],
      "@Screens/*": [
        "app/screens/*"
      ],
      "@Navigation/*": [
        "app/navigation/*"
      ]
    }
  }
}